<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <shape android:shape="rectangle">
      <solid android:color="#9AFFFFFF" />
      <corners android:radius="36dp" />
    </shape>
  </item>

  <item
    android:bottom="2dp"
    android:left="2dp">
    <shape>
      <padding
        android:bottom="36dp"
        android:left="36dp"
        android:right="36dp"
        android:top="36dp" />
      <corners android:radius="36dp" />
      <gradient
        android:angle="45"
        android:centerColor="#32D7E6"
        android:centerX="0.6"
        android:endColor="#F365BA"
        android:startColor="#71ADE8"
        android:type="linear" />
    </shape>

  </item>

</layer-list>
